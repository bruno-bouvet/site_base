{% block body %}
    <body>

    <!-- Header
    ================================================== -->
    <header id="home"
            style="background: #161415 url({{ asset('bundles/cv/image/marathon-feet-10_18_2009-1.jpg') }}) no-repeat top center;">

        <nav id="nav-wrap">

            <a class="mobile-btn" href="#nav-wrap" title="Show navigation">Show navigation</a>
            <a class="mobile-btn" href="#" title="Hide navigation">Hide navigation</a>

            <ul id="nav" class="nav">
                <li class="current"><a class="smoothscroll" href="#home">Home</a></li>
                <li><a class="smoothscroll" href="#about">About</a></li>
                <li><a class="smoothscroll" href="#resume">CV</a></li>
                <li><a class="smoothscroll" href="#portfolio">Réalisations</a></li>
                <li><a class="smoothscroll" href="#contact">Contact</a></li>
                <li><a class="back" href="{{ path('blog_default_index') }}">Retour</a></li>
            </ul> <!-- end #nav -->

        </nav> <!-- end #nav-wrap -->

        <div class="row banner">
            <div class="banner-text">
                <h1 class="responsive-headline">Bruno Bouvet.</h1><br>
                <h3>Basé à Paris,<br> je suis actuellement à la recherche d'un poste de <span>Chargé de Marketing et Communication</span>
                    en France ou à l'international<br> <span>#polyvalent #BtoB #social #startup</span>
                    <br><br>
                    <p>Hi, if you've been reading this page, please note that an english version will be published very
                        soon. Thanks for your interest.</p>
                    Let's <a class="smoothscroll" href="#about">start scrolling</a>
                    and learn more <a class="smoothscroll" href="#about">about me</a>.
                </h3>
                <hr/>
                <ul class="social">
                    <li><a href="https://twitter.com/techsquids" target="_new"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="https://plus.google.com/u/0/+brunobouvet/posts" target="_blank"><i
                                    class="fa fa-google-plus"></i></a></li>
                    <li><a href="http://www.linkedin.com/pub/bruno-bouvet/15/bb1/857" target="_blank"><i
                                    class="fa fa-linkedin"></i></a></li>
                    <!--
                    <li><a href="#"><i class="fa fa-instagram" target="_blank"></i></a></li>
                    -->
                </ul>
            </div>
        </div>

        <p class="scrolldown">
            <a class="smoothscroll" href="#about"><i class="icon-down-circle"></i></a>
        </p>

    </header> <!-- Header End -->

    <!-- About Section
        ================================================== -->
    {% include '@Cv/Default/about.html.twig' %}

    <!-- Resume Section
    ================================================== -->
    <section id="resume">

        <!-- WORK-->

        {% include '@Cv/Default/work.html.twig' %}

        <!-- EDUCATION-->

        {% include '@Cv/Default/education.html.twig' %}

        <!-- Skills -->

        {% include '@Cv/Default/skills.html.twig' %}

    </section> <!-- Resume Section End-->


    <!-- Portfolio Section
    ================================================== -->
    {% include '@Cv/Default/portfolio.html.twig' %}

    <!-- Call-To-Action Section
    ================================================== -->
    <section id="call-to-action">

        <div class="row">

            <div class="two columns header-col">

                <h1><span>CV.</span></h1>

            </div>

            <div class="seven columns">

                <h2><a href="">Vous êtes intéressé ? </a></h2>
                <p>Téléchargez mon <span>CV</span> en version <span>PDF</span>.
                </p>

            </div>

            <div class="three columns action">

                <a href="images/CV_Bruno_Bouvet_MARS_2016.pdf" class="button"><i class="fa fa-download"></i>Télécharger
                    le PDF</a>

            </div>

        </div>

    </section> <!-- Call-To-Action Section End-->


    <!-- Contact Section
    ================================================== -->
    <section id="contact">

        <div class="row section-head">

            <div class="two columns header-col">

                <h1><span>Get In Touch.</span></h1>

            </div>

            <div class="ten columns">

                <p class="lead">Si vous souhaitez me contacter n'hésitez pas à m'envoyer un message. <br>Je vous
                    répondrai dès que possible.
                </p>

            </div>

        </div>

        <div class="row">

            <div class="eight columns">

                <!-- form -->
                <form action="" method="post" id="contactForm" name="contactForm">
                    <fieldset>

                        <div>
                            <label for="contactName">Nom et Prénom <span class="required">*</span></label>
                            <input type="text" value="" size="35" id="contactName" name="contactName">
                        </div>

                        <div>
                            <label for="contactEmail">Email <span class="required">*</span></label>
                            <input type="text" value="" size="35" id="contactEmail" name="contactEmail">
                        </div>

                        <div>
                            <label for="contactSubject">Sujet <span class="required">*</span></label>
                            <input type="text" value="" size="35" id="contactSubject" name="contactSubject">
                        </div>

                        <div>
                            <label for="contactMessage">Votre message <span class="required">*</span></label>
                            <textarea cols="50" rows="15" id="contactMessage" name="contactMessage"></textarea>
                        </div>

                        <div>
                            <button class="submit">Envoyer</button>
                            <span id="image-loader">
                        <img alt="" src="images/loader.gif">
                     </span>
                        </div>

                    </fieldset>
                </form> <!-- Form End -->

                <!-- contact-warning -->
                <div id="message-warning"> Game Over, Play Again !</div>
                <!-- contact-success -->
                <div id="message-success">
                    <i class="fa fa-check"></i>Votre message m'a bien été envoyé, Merci!<br>
                </div>

            </div>


            <aside class="four columns footer-widgets">

                <div class="widget widget_contact">

                    <h4>Contact</h4>
                    <p class="address">
                        Bruno Bouvet<br>
                        <span> +33 (0) 7 62 40 66 92</span>
                    </p>

                </div>

                <div class="widget widget_tweets">

                    <h4 class="widget-title">Mes derniers tweets</h4>
                    <a class="twitter-timeline" href="https://twitter.com/techsquids"
                       data-widget-id="502917926303723520">Tweets de @techsquids</a>
                    <script>!function (d, s, id) {
                            var js, fjs = d.getElementsByTagName(s)[0],
                                p = /^http:/.test(d.location) ? 'http' : 'https';
                            if (!d.getElementById(id)) {
                                js = d.createElement(s);
                                js.id = id;
                                js.src = p + "://platform.twitter.com/widgets.js";
                                fjs.parentNode.insertBefore(js, fjs);
                            }
                        }(document, "script", "twitter-wjs");</script>

                </div>

            </aside>

        </div>

    </section> <!-- Contact Section End-->


    <!-- footer
    ================================================== -->
    <footer>

        <div class="row">

            <div class="twelve columns">

                <ul class="social-links">
                    <li><a href="https://twitter.com/techsquids" target="_blank"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="https://plus.google.com/u/0/+brunobouvet/posts" target="_blank"><i
                                    class="fa fa-google-plus"></i></a></li>
                    <li><a href="http://www.linkedin.com/pub/bruno-bouvet/15/bb1/857" target="_blank"><i
                                    class="fa fa-linkedin"></i></a></li>


                    <div id="go-top"><a class="smoothscroll" title="Back to Top" href="#home"><i
                                    class="icon-up-open"></i></a>

                    </div>

            </div>

        </div>

    </footer> <!-- Footer End-->

