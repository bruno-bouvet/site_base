{% extends '@Blog/layout.html.twig' %}

{% block body %}

    {% stylesheets
    '@BlogBundle/Resources/public/css/newsgrid.css'


    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <div class="container">
        <div class="row">

            {#<h3>Tous les articles de {{ author.name }}</h3>#}

            <div id="grid" class="col-lg-8  col-md-8 col-sm-12 col-xs-12 jasgrid pull-left">
                {% for author in author %}

                    <a class="reward-button" href="{{ path('article', { 'slug': posts.slug }) }}">
                        <div class="lib-panel">
                            <div class="row box-shadow lib-card">

                                <div class="col-md-4">
                                    <img class="img-responsive" src="http://lorempixel.com/850/850/?random=123">
                                </div>
                                <div class="col-md-8 ">

                                    <div class="lib-row lib-desc">
                                        <div class="lib-row lib-header">
                                            {{ author.title  |truncate(50, false, "  ...") }}
                                            <div class="lib-header-seperator"></div>
                                        </div>
                                        <div class="lib-row lib-desc tags">
                                            <p class="pull-left author">{{ author.author |upper }}</p>
                                            <p id="category" class="pull-left">{{ author.tag |upper }}</p>
                                            <p>{{ author.date |time_diff }}</p>

                                        </div>
                                        <div class="lib-row lib-desc">

                                            <p>{{ author.content |striptags |slice(0, 150) |raw  }} lire plus ...</p>
                                            <br>

                                        </div>

                                    </div>

                                </div>

                            </div>
                        </div>
                    </a><!-- end reward-button -->
                {% endfor %}
            </div><!-- /. end col -->

        </div>

    </div>
{% endblock body %}