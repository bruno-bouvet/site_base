{% extends '::base.html.twig' %}

{% block body %}
    {% stylesheets
    '@BlogBundle/Resources/public/css/global.css'

    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}


    <div class="container ">
        <div class="row">
            <div class="col-md-offset-1 article">
            <h3>Vous avez une question ?</h3><h4>Envoyez-nous un message</h4>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <input class="btn bigbtn-blue" type="submit" value="Submit">
                {% for message in app.flashes('success') %}
                    <div class="flash-notice">
                        {{ message }}
                    </div>
                {% endfor %}
                {{ form_end(form) }}


            </div>

        </div>
    </div>
<style>
    .flash-notice {
        display: inline-block;
        color: #25ADC0;
        font-size: 20px;
        padding-left: 2em;
    }

    .article {
padding-bottom: 2em;
    }
</style>
{% endblock body %}