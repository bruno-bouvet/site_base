{% extends '@Blog/layout.html.twig' %}

{% block body %}
    {% stylesheets
    '@BlogBundle/Resources/public/css/global.css'
    '@BlogBundle/Resources/public/css/contact.css'

    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}


    <div class="container ">

        <div class="row">
            <div class="col-md-offset-1 article">
                <h3>Vous avez une question ?</h3><h4>Envoyez-nous un message</h4>
                {{ form_start(form) }}

                {% spaceless %}
                    <div class="form_row">

                        <h5>Nom</h5>
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="form_row">
                        <h5>Email</h5>
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email) }}
                    </div>
                    <div class="form_row">
                        <h5>Sujet</h5>
                        {{ form_errors(form.subject) }}
                        {{ form_widget(form.subject) }}
                    </div>
                    <div class="form_row">
                        <h5>Messsage</h5>
                        {{ form_errors(form.message) }}
                        {{ form_widget(form.message) }}
                    </div>

                    <button id="send" href="#send" class="btn bigbtn-blue" type="submit" value="Submit">Submit</button>
                    {% for message in app.flashes('success') %}
                        <div class="flash-notice">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endspaceless %}

                {{ form_end(form) }}


            </div>

        </div>
