{% extends '::base.html.twig' %}

{% block body %}
    {% stylesheets
    '@BlogBundle/Resources/public/css/article.css'
    '@BlogBundle/Resources/public/css/nav.css'
    '@BlogBundle/Resources/public/css/global.css'
    '@BlogBundle/Resources/public/css/sidebar.css'

    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <div class="container ">
        <div class="row">
            <div class="col-md-8 article">
                <h1>{{ post.title }}</h1>
                <a href="#">{{ post.author }}</a>
                    <p><a href="#">{{ post.tag }} </a> {{ post.date |localizeddate('full', 'none') }} </p>

                <p>{{ post.content |raw }}</p>
            </div>
            {% include '@Blog/includes/sidebar-actus.html.twig' %}


        </div>
    </div>

{% endblock body %}