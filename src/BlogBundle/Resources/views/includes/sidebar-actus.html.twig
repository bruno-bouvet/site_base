{% stylesheets
'@BlogBundle/Resources/public/css/sidebar.css'

filter='cssrewrite' %}
<link rel="stylesheet" href="{{ asset_url }}"/>
{% endstylesheets %}

<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 side-bar">
    <div class="col-lg-12 col-md-12 col-sm-12 side-bar-top">
        <i class="fa fa-clock-o fa-2x pull-left" aria-hidden="true"></i>
        <h4>LES DERNIÈRES ACTUS</h4>
        <small>Dernière mise à jour: {{ lastPost.date|localizeddate('full', 'none') }}</small>
    </div>
    <!-- Tab panes -->
    <div class="tab-content sidebar-tabing" id="nav-tabContent">
        <div class="tab-pane active" id="home" role="tabpanel">


            {#<!-- date tab with link to the all articles by day page -->#}
            {#<div class="row>">#}
            {#<a href="#">#}
            {#<h5 style="background: #FF7B00; padding: .5em; color: #ffffff; text-align: left; text-decoration: none !important;">#}
            {#<i class="fa fa-clock-o" aria-hidden="true"></i>#}
            {#Samedi 16 Septembre#}
            {#</h5>#}
            {#</a>#}
            {#</div>#}
            {#<!-- ./ Date tab -->#}

            {% for post in posts %}

                <div class="media">
                    <a href="{{ path('article', { 'slug': post.slug }) }}"> <img
                                class="d-flex mr-3 pull-left"
                                src="http://lorempixel.com/850/850/?random=123"
                                alt="Generic placeholder image">
                    </a>
                    <div class="media-body">
                        <div class="news-title">
                            <p class="title-small">
                                <a href="{{ path('article', { 'id': post.id, 'slug': post.slug }) }}">{{ post.title |lower |truncate(50, false, "  ...") }}
                                </a>
                            </p>
                        </div>
                        <br>
                        <div class="col-md-12 ">
                            <p class="time">{{ post.date |time_diff }}
                            </p>
                        </div>


                        {#<!-- comments count-->#}
                        {#<div class="col-md-6 pull-right nbr-comments">#}
                        {#<a class="pull-right " href="#"><i class="fa fa-comment-o pull-left "#}
                        {#aria-hidden="true"></i>10</a>#}

                        {#</div>#}
                        <!-- ./ comments count-->
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>
</div>
<style>
    @media screen and (max-width: 1199px) and (min-width: 992px){
        .side-bar {
            margin-top: 5em;
        }
    }
</style>
