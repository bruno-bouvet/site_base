{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    {% stylesheets
    '@BlogBundle/Resources/public/css/global.css'

    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <div class="container">
        <div class="row">
            <div class="fos_user_user_show">
                <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
                <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>

                <a class="PrimaryNav btn bigbtn-blue" title="Nos meilleurs projects"
                   href="{{ path('fos_user_security_logout') }}">Logout</a>

                <a class="PrimaryNav btn bigbtn-blue" title="Nos meilleurs projects"
                   href="{{ path('fos_user_profile_edit') }}">Modifier le profile</a>

            </div>

        </div>
    </div>



{% endblock body %}