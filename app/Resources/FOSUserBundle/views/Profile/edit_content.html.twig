{% trans_default_domain 'FOSUserBundle' %}



{% block body %}
    {% stylesheets
    '@BlogBundle/Resources/public/css/global.css'

    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <div class="container">
        <div class="row">

            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
            {{ form_widget(form) }}
            <div>

                <input class="btn bigbtn-blue" type="submit" value="{{ 'profile.edit.submit'|trans }}"/>

            </div>
            {{ form_end(form) }}
            <a class="PrimaryNav btn bigbtn-blue" title="Nos meilleurs projects"
               href="{{ path('fos_user_profile_show') }}">Retour au profile </a>


        </div>
    </div>



{% endblock body %}